@using PagedList.Mvc;
@model PagedList.IPagedList<H622.Models.Post>

@{
    ViewBag.Title = "ALL Post";
    ViewBag.PostTitle = "My Blog -- Qiang Zeng";
}


@if (Model.Count == 0)
{
    <p>No Post Found!</p>
}
else
{
    foreach(var post in Model.ToList())
    {
        @Html.Partial("_PostTemplate", post)
    }
    <!-- Pager -->
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter }))
}



